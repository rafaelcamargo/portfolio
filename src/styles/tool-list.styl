@require '_variables'
@require '_mixins'

.r-tool-list-group
  h2
    color alpha($color-grey-dark, .6)
    font-size $font-size-xs
    font-weight bold
  & > ul
    display grid
    grid-template-columns 1fr 1fr 1fr
    grid-gap 20px
    margin-top 20px
  & + .r-tool-list-group
    margin-top 80px

.r-tool-list-group-item
  padding 20px
  border-radius 3px
  box-sizing border-box
  box-shadow(0px 2px 12px 0px $color-grey-light)
  h3
    font-size $font-size-xs
    font-weight bold
  ul
    margin-top 12px
  li
    display flex
    align-items baseline
    color $color-grey-dark
    font-size $font-size-xxs
    & + li
      margin-top 2px

.r-tool-list-group-detail-value
  margin-left 5px
  padding 5px
  background-color $color-grey-lighter
  font-weight bold
  border-radius 3px

+breakpoint('xs')
  .r-tool-list-group
    & > ul
      grid-template-columns 1fr 1fr
