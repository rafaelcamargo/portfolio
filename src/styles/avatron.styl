@require '_variables'
@require '_mixins'

$avatar-size = 60px

.r-avatron
  display flex
  align-items center
  .r-avatar
    width $avatar-size
    height $avatar-size
    & + .r-avatron-titles
      margin-left 10px
  .r-badge
    position relative
    top -2px
    left 8px
  h2
    font-size $font-size-xl
  .r-avatron-subtitle,
  .r-avatron-caption
    margin-top 2px
    font-weight 300
  .r-avatron-subtitle
    font-size $font-size-xs
  .r-avatron-caption
    font-size $font-size-xxs
