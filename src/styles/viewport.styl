@require '_variables'
@require '_mixins'

.r-viewport
  position relative
  min-height 100vh
  padding-bottom 170px
  box-sizing border-box
  header
    position sticky
    top 0
    z-index $layer-lowest
  &.r-viewport-menuless
    header
      position relative
      .r-topbar
        background-color transparent
        .r-logo
          left 0
          transform none
  .r-sidebar
    position fixed
    top 0
    left 0
    overflow-x hidden
    overflow-y scroll
    z-index $layer-high
    transition(all, 300ms)
    transform('translate3d(-100%,0,0)')
    box-shadow(3px 0 32px 0 alpha($color-darkest, 0))
    &.r-sidebar-visible
      transform('translate3d(0,0,0)')
      box-shadow(3px 0 32px 0 alpha($color-darkest, .25))
  .r-footer
    position absolute
    bottom 0
    left 0
    width 100%
