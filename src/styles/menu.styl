@require '_variables'
@require '_mixins'


.r-menu-list
  clearfix()
  margin 0
  padding 0
  list-style-type none

.r-menu-item
  float left
  &:not(:first-child)
    margin-left 30px

.r-menu-item-link
  position relative
  padding 5px 0
  color $color-darkest
  border 0
  +highlight()
    color $color-purple
  &.r-menu-item-link-active
    pointer-events none
    &:after
      position absolute
      top 100%
      left 50%
      content ' '
      width 4px
      height 4px
      background-color $color-purple
      border-radius 2px
      transform('translate(-50%,-50%)')

+breakpoint('xs')
  .r-menu-item-link
    &.r-menu-item-link-active
      &:after
        background-color transparent
